	i3bar_command i3bar
	status_command i3status
	position bottom
    
	bindsym button4 nop
	bindsym button5 nop
	strip_workspace_numbers yes

    colors {
        background #222D31
        statusline #F9FAF9
        separator  #454947

#                      border  backgr. text
